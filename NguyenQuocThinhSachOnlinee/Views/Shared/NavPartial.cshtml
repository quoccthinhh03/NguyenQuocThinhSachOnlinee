@model IEnumerable<NguyenQuocThinhSachOnlinee.Models.MENU>
<nav class="navbar navbar-inverse">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data- target="#navbar1" aria-expanded="false">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">SachOnline</a>
        </div>

        <div class="collapse navbar-collapse" id="navbar1">
            <ul class="nav navbar-nav">
                @{
                    int i = 0;
                    foreach (var item in Model)
                    {
                        if (ViewBag.lst[i] != 0)
                        {
                            <li class="dropdown">
                                <a href="@item.MenuLink" class="dropdown-toggle"
                                   data-toggle="dropdown" role="button" aria-expanded="false" aria-haspopup="true">
                                    @item.MenuName<span class="caret"></span>
                                </a>
                                @Html.Action("LoadChildMenu", "TrangChu", new { parentId = item.Id })
                            </li>
                        }
                        if (item.MenuLink.Contains("://"))
                        {
                            <li><a href="@item.MenuLink">@item.MenuName</a></li>
                        }

                        else
                        {
                            <li><a href="~/@item.MenuLink">@item.MenuName</a></li>
                        }
                        i++;
                    }
                }
            </ul>

            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                    @Html.Action("loginlogout", "TrangChu")
                </li>
                <li>
                    @Html.Action("GioHangPartial", "GioHang")
                </li>
            </ul>
        </div>
    </div>
</nav>
<style>
    .dropdown-submenu {
        position: relative;
    }
</style>
<script>
    $(document).ready(function () {
        $('.dropdown-submenu a.test').on("click", function (e) {
            $(this).next('url').toggle();
            e.stopPropagation();
            e.preventDefault();
        });
    });
</script>