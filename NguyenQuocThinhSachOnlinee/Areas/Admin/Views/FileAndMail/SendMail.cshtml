<h3>Send email with attachment</h3>
<div>
    <form action="/Admin/FileAndMail/SendMail" name="SendMail"
          method="post"
          enctype="multipart/form-data">
        <div>From:</div>
        <input name="From" type="email" required />
        <div>To:</div>
        <input name="To" type="email" required /> <div>Subject:</div>
        <input name="Subject" type="text" />
        <div>Notes:</div>
        <textarea name="Notes" rows="4"></textarea>
        <div>Attachment:</div>
        <input name="Attachment" type="file" />
        <hr />
        <input type="submit" value="Send" />
    </form>
</div>

